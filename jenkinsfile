pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                // Clone the GitHub repository
                git 'https://github.com/umabawania/customs-addons.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                // Build Docker image from Dockerfile
                script {
                    docker.build("odoo:21", "-f customs-addons/Dockerfile customs-addons")
                }
            }
        }
    }
}
